{
  "compilerOptions": {
    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Node",

    /* Emit */
    "outDir": "./dist",

    /* Language and Environment */
    "target": "ESNext"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
